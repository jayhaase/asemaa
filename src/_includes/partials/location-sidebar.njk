<aside class="hidden md:block w-1/3 bg-white border border-gray-300 rounded-lg p-4">
    <h2 class="text-xl font-semibold mb-4">The Journey</h2>
    <div class="overflow-y-auto max-h-[500px] space-y-4 pr-2">
        {% for location in locations %}
            <div id="location-{{ location.id }}" 
                class="rounded-lg p-4 border border-gray-200 hover:border-gray-500 transition-all duration-300"
                :class="{
                    'bg-red-50': $store.locations.hoveredLocationId === '{{ location.id }}' || $store.locations.selectedLocation?.id === '{{ location.id }}',
                    'bg-gray-50': !($store.locations.hoveredLocationId === '{{ location.id }}' || $store.locations.selectedLocation?.id === '{{ location.id }}')
                }"
                @mouseenter="$store.locations.setHoveredLocation('{{ location.id }}')"
                @mouseleave="$store.locations.setHoveredLocation(null)">
                
                <h3 class="font-semibold text-lg mb-2">{{ location.name }}</h3>
                <p class="text-sm text-gray-600 line-clamp-3 mb-3">{{ location.description }}</p>
                
                <div class="flex justify-end">
                    <button 
                        @click="$store.locations.showLocationInfo({
                            id: '{{ location.id }}',
                            name: '{{ location.name | safe }}',
                            description: '{{ location.description | safe }}',
                            coordinates: { x: {{ location.coordinates.x }}, y: {{ location.coordinates.y }} }
                        })"
                        class="text-gray-400 hover:text-forest transition-colors rounded-full hover:bg-gray-100 p-1.5 -m-1.5">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </button>
                </div>
            </div>
        {% endfor %}
    </div>
</aside>