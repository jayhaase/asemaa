<aside class="w-1/3 bg-white border border-gray-300 rounded-lg p-4">
    <h2 class="text-xl font-semibold mb-4">The Journey</h2>
    <!-- Scrollable container -->
    <div class="overflow-y-auto max-h-[500px] space-y-4 pr-2">
        {% for location in locations %}
            <div 
                class="bg-gray-50 rounded-lg p-4 border border-gray-200 hover:border-gray-300 transition-colors"
                @mouseenter="marker = { x: {{ location.coordinates.x }}, y: {{ location.coordinates.y }}, visible: true }"
                @mouseleave="marker.visible = false">
                
                <!-- Title -->
                <h3 class="font-semibold text-lg mb-2">{{ location.name }}</h3>
                
                <!-- Description -->
                <p class="text-sm text-gray-600 line-clamp-3 mb-3">{{ location.description }}</p>
                
                <!-- Bottom Row with Year and Info Button -->
                <div class="flex justify-between items-center mt-2 pt-2 border-t border-gray-200">
                    <span class="text-sm text-gray-500">Est. {{ location.yearEstablished }}</span>
                    
                    <button 
                        @click="selectedLocation = {
                            name: '{{ location.name | safe }}',
                            description: '{{ location.description | safe }}',
                            historicalSignificance: '{{ location.historicalSignificance | safe }}',
                            yearEstablished: '{{ location.yearEstablished }}'
                        }; showDialog = true"
                        class="text-gray-400 hover:text-forest transition-colors rounded-full hover:bg-gray-100 p-1.5 -m-1.5">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </button>
                </div>
            </div>
        {% endfor %}
    </div>
</aside>