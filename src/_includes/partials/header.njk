<div
    class="flex items-center justify-center py-4 bg-gray-100">
    <!-- Container for three cards in a row -->
    <div
        class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-6 max-w-5xl w-full px-6 sm:px-50">
        <!-- Left Card -->
        {% set cardData = { title: leftPanelTitle, subtitle: leftPanelSubtitle } %}
        {% include "components/heading-card.njk" %}
        <!-- Center Card -->
        <div class="bg-white border border-gray-300 rounded-lg shadow-lg p-6 w-full md:w-1/3 max-w-none md:max-w-md text-center flex
                flex-col justify-center h-full">
            <h1 class="font-heading text-5xl font-semibold text-gray-800">{{ title }}</h1>
            <h2 class="font-heading text-xl mt-2 text-gray-600">{{ subtitle }}</h2>
        </div>
        <!-- Right Card -->
        {% set cardData = { title: rightPanelTitle, subtitle: rightPanelSubtitle } %}
        {% include "components/heading-card.njk" %}
    </div>
</div>