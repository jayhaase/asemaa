<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title }}</title>
        <link rel="stylesheet" href="{{ '/css/tailwind.css' | url }}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link
            href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;700&family=Nunito:wght@400;700&family=Cinzel:wght@400;700&display=swap"
            rel="stylesheet">
        <meta name="description" content="Learn about Ojibwe Asemaa and its historical trading routes across Turtle Island">
        <meta property="og:title" content="{{ title }}">
        <meta
            property="og:description"
            content="Learn about Ojibwe Asemaa and its historical trading routes across Turtle Island">
        <meta
        property="og:type" content="website"> <!-- Add your site URL here -->
        <meta
        property="og:url" content=""> <!-- Add your site image here -->
        <meta property="og:image" content="">
    </head>
    <body>
        <script>
            const locationData = {{ locations | dump | safe }};
        </script>
        <div class="px-6 md:px-0">
            <div
                x-data="{
                    marker: {x:0,y:0,visible:false},
                    selectedMarker: {x:null,y:null},
                    hoveredLocationId: null,
                    selectedLocationId: null,
                    showDialog: false,
                    selectedLocation: null,
                    locations: locationData
                }"
                @show-location.window="selectedLocation = $event.detail; showDialog = true; selectedMarker = { x: $event.detail.coordinates.x, y: $event.detail.coordinates.y }; selectedLocationId = $event.detail.id;">
                {% include "partials/header.njk" %}
                <main class="content font-body max-w-3xl mx-auto py-6">
                    {{ content | safe }}
                    <!-- Location Dropdown -->
                    <div class="w-full max-w-md mx-auto mb-6">
                        <select
                            class="w-full p-2 border rounded-md"
                            x-model="selectedLocationId"
                            @change="
                                let loc = locations.find(l => l.id === $event.target.value); 
                                selectedLocationId = loc.id; 
                                selectedMarker = { x: loc.coordinates.x, y: loc.coordinates.y };
                                document.getElementById('location-' + loc.name.toLowerCase().replace(/\s+/g, '-')).scrollIntoView({ behavior: 'smooth', block: 'center' })
                            ">
                            <option value="">Select a location...</option>
                            {% for location in locations %}
                                <option value="{{ location.id }}">{{ location.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-6 p-12 justify-center">
                        <div class="flex space-x-6">
                            {% include "partials/location-sidebar.njk" %}
                            {% include "partials/map-area.njk" %}
                        </div>
                    </div>
                </main>
                <!-- Simplified Dialog -->
                <div
                    x-show="showDialog"
                    x-cloak
                    class="fixed inset-0 z-50 flex items-center justify-center p-4"
                    @click.self="showDialog = false">
                    <!-- Backdrop -->
                    <div class="fixed inset-0 bg-black/50"></div>
                    <!-- Dialog Content -->
                    <div
                        class="relative bg-white rounded-lg shadow-xl max-w-2xl w-full">
                        <!-- Header -->
                        <div class="border-b p-4 flex justify-between items-center">
                            <h2 class="text-xl font-semibold" x-text="selectedLocation?.name"></h2>
                            <button @click="showDialog = false" class="text-gray-500 hover:text-gray-700">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                            </button>
                        </div>
                        <!-- Body -->
                        <div class="p-4 space-y-4">
                            <div class="text-sm text-gray-500">
                                Established:
                                <span x-text="selectedLocation?.yearEstablished"></span>
                            </div>
                            <div>
                                <h3 class="font-semibold mb-2">Description</h3>
                                <p class="text-gray-600" x-text="selectedLocation?.description"></p>
                            </div>
                            <div>
                                <h3 class="font-semibold mb-2">Historical Significance</h3>
                                <p class="text-gray-600" x-text="selectedLocation?.historicalSignificance"></p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Gallery link -->
                <div class="text-center mb-8">
                    <a href="/gallery" class="inline-flex items-center text-grey-600 hover:text-blue-800 font-medium">
                        View Turtle Island Color Samples
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewbox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
                {% include "partials/footer.njk" %}
            </div>
        </div>
        <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    </body>
</html>