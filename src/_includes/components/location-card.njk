<div id="location-{{ location.id }}" 
    class="rounded-lg p-4 border border-gray-200 hover:border-gray-500 transition-all duration-300 cursor-pointer"
    :class="{
        'bg-red-50': $store.locations.selectedLocation?.id === '{{ location.id }}' || $store.locations.hoveredLocationId === '{{ location.id }}',
        'bg-gray-50': true
    }"
    @mouseenter="$store.locations.setHoveredLocation('{{ location.id }}')"
    @mouseleave="$store.locations.setHoveredLocation(null)"
    @click="$store.locations.selectLocation('{{ location.id }}')">
    
    <!-- Title and Magnifying Glass -->
    <div class="flex justify-between items-center mb-3">
        <h3 class="font-semibold text-lg">{{ location.name }}</h3>
        <button 
            @click.stop="$store.locations.showLocationInfo('{{ location.id }}')"
            class="text-gray-400 hover:text-forest transition-colors rounded-full hover:bg-gray-100 p-1.5 -m-1.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
        </button>
    </div>
    
    <!-- Image -->
    <div class="w-full h-32">
        <img src="{{ location.imageUrl }}" 
             alt="{{ location.name }}" 
             class="w-full h-full object-cover rounded-lg">
    </div>
</div> 