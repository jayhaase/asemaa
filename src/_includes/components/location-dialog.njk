<div
    x-show="$store.locations.showDialog"
    x-cloak
    role="dialog"
    aria-labelledby="dialog-title"
    aria-modal="true"
    class="fixed inset-0 z-50 flex items-center justify-center p-4"
    @keydown.escape.window="$store.locations.closeDialog()"
    x-trap.noscroll="$store.locations.showDialog"
    @click.self="$store.locations.closeDialog()">
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-black/50"></div>
    <!-- Dialog Content -->
    <div 
        class="relative bg-white rounded-lg shadow-xl max-w-2xl w-full"
        @click.outside="$store.locations.closeDialog()">
        <!-- Header -->
        <div class="border-b p-4 flex justify-between items-center">
            <h2 id="dialog-title" class="text-xl font-semibold" x-text="$store.locations.selectedLocation?.name"></h2>
            <button 
                @click="$store.locations.closeDialog()"
                class="text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-forest focus:ring-offset-1 rounded-full p-1 transition-colors"
                aria-label="Close dialog">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <!-- Body -->
        <div class="p-4">
            <div class="w-full h-96">
                <img 
                    :src="$store.locations.selectedLocation?.imageUrl" 
                    :alt="$store.locations.selectedLocation?.name"
                    class="w-full h-full object-cover">
            </div>
        </div>
    </div>
</div> 