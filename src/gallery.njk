---
layout: gallery.njk
title:  Turtle Island Color Samples
---

<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-center">{{ title }}</h1>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {% for image in gallery.images %}
        <div class="group relative rounded-lg shadow-lg bg-gray-100 flex flex-col">
            <!-- Image Container -->
            <div class="aspect-square overflow-hidden rounded-t-lg pt-4">
                <img src="{{ image.url }}" 
                     alt="{{ image.title }}"
                     class="w-full h-full object-contain transition-transform duration-300 group-hover:scale-105">
            </div>
            
            <!-- Title Bar -->
            <div class="p-3 pt-2 bg-white rounded-b-lg min-h-[4rem]">
                <h3 class="text-gray-800 text-center text-lg font-medium leading-tight">
                    {{ image.title }}
                </h3>
            </div>
            
            <!-- Clickable area -->
            <button class="absolute inset-0 w-full h-full cursor-pointer"
                    x-data
                    @click="$dispatch('open-modal', { image: '{{ image.url }}', title: '{{ image.title }}' })">
            </button>
        </div>
        {% endfor %}
    </div>
</div>

<!-- Modal for full-size image -->
<div x-data="imageModal()"
     x-show="isOpen"
     @open-modal.window="open($event.detail)"
     @keydown.escape.window="close"
     class="fixed inset-0 z-50 overflow-auto bg-black bg-opacity-90 flex items-center justify-center"
     x-cloak>
    <div class="relative max-w-7xl mx-auto p-4">
        <button @click="close" class="absolute top-4 right-4 text-white hover:text-gray-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
        <img :src="currentImage" :alt="currentTitle" class="max-h-[90vh] max-w-full">
        <p x-text="currentTitle" class="text-white text-center mt-4 text-lg"></p>
    </div>
</div> 